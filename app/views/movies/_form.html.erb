<%= form_for([@post, @post.movies.build]) do |f| %>
	<%= f.error_messages %>
	<div class="field">
		<%= f.label :title %><br />
		<%= f.text_field :title %>
	</div>
	
	<div class="field">
		<%= f.label :desc %><br />
		<%= f.text_area :desc %>
	</div>
	
	<div class="actions">
		<%= f.submit %>
	</div>
<% end %> 
